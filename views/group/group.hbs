{{#is user 'Admin'}}
  <h2>Requests:</h2>
  {{#each notifications}}
    <p>From: {{idUserFrom.username}}</p>
    <form action="/addMember/{{idUserFrom.id}}/{{idGroup.id}}/{{this.id}}" method="post">
      <button type="submit">Add to group</button>
    </form>
  {{/each}}
{{/is}}